<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:layout_height="match_parent"
    tools:context=".Type_Hall"
    android:background="@drawable/b4">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/Mini_hall"
        android:layout_width="267dp"
        android:layout_height="138dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Seminar"
        android:layout_marginTop="52dp"
        android:layout_alignLeft="@+id/Seminar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b4">

            <ImageView
                android:id="@+id/Mini_img"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:src="@drawable/minihall" />

            <TextView
                android:id="@+id/Mini_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="4"
                android:text="MINI_SEMINAR HALL"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/Seminar"
        android:layout_width="255dp"
        android:layout_height="138dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b4">

            <ImageView
                android:id="@+id/Seminar_img"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:src="@drawable/seminarhall" />

            <TextView
                android:id="@+id/Seminar_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="4"
                android:text="SEMINAR HALL"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/Auditorium"
        android:layout_width="255dp"
        android:layout_height="138dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b4">

            <ImageView
                android:id="@+id/auditorium_img"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:src="@drawable/seminar" />

            <TextView
                android:id="@+id/auditorium_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="4"
                android:text="BOOKED DETIALS"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>