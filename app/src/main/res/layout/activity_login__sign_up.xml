<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="ENTER THE DETIALS"
            android:textColor="#2857e4"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/sign_up_id"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:hint="ENTER YOUR ID" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/sign_up_by"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/sign_up_by_student"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="STUDENT" />

                <RadioButton
                    android:id="@+id/sign_up_by_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="90dp"
                    android:text="TEACHER" />
            </RadioGroup>

        </LinearLayout>

        <EditText
            android:id="@+id/sign_up_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:hint="ENTER YOUR NAME" />

        <EditText
            android:id="@+id/sign_up_dept"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:hint="ENTER YOUR DEPT NAME" />

        <EditText
            android:id="@+id/sign_up_password"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="ENTER YOUR PASSWORD" />

        <EditText
            android:id="@+id/sign_up_retypePass"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:inputType="textPassword"
            android:gravity="center"
            android:hint="RE-TYPE YOUR PASSWORD" />

        <Button
            android:id="@+id/sign_up_by_submit"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:text="SIGNUP" />

    </LinearLayout>
</ScrollView>