<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b6"
    tools:context=".detials_of_auditorium">
 <LinearLayout
     android:id="@+id/linear"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <ImageView
         android:id="@+id/Hall_img"
         android:layout_width="match_parent"
         android:layout_height="189dp"
         android:layout_alignParentStart="true"
         android:layout_alignParentTop="true"
         android:layout_alignParentLeft="true" />
     <TextView
         android:id="@+id/Hall_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textColor="#050505"
         android:textStyle="bold"
         android:text=""
         android:textSize="30sp"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="16dp"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:orientation="horizontal">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:text="CAPICITY:"
             android:textSize="20sp" />


         <TextView
             android:id="@+id/Hall_cap"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="80dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="16dp"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="TYPE OF HALL:"
             android:textSize="20sp" />
         <TextView
             android:id="@+id/Hall_type"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="LOCATION:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Hall_loc"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="PROJECTOR:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Hall_pro"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="IN-CHARGE:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Hall_incharge"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="PHONE-NUMBER:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Hall_incharge_no"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="WIRE MICK:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Mic_wire"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="HAND MICK:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Mic_hand"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="COLLER MICK:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Mic_coller"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="AIR COOLER:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/ac"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="GUEST ROOM:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Hall_guest_room"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />

     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="MARKER BOARD:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Hall_Marker-board"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="NON-TEACHING:"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/Hall_non_teaching_name"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="16dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:text="PHONE-NUMBER:"
             android:textSize="20sp" />


         <TextView
             android:id="@+id/Hall_non_teaching_no"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="20sp" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="40dp"
         android:layout_gravity="center">
         <Button
             android:id="@+id/ok"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="BOOK NOW" />
     </LinearLayout>
 </LinearLayout>


</ScrollView>